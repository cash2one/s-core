<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="config.xml.xsd">
    <variables>
        <var type="constant" name="secret" value="123"/>
        <var type="text" name="text" min="5" max="10" appenddigits="true"/>
    </variables>
    <commands>
        <command type="loaduseragent"/>
        <command type="loadproxy"/>
        <command type="loademail" prefix="email" host="mail.clovermail.net"/>
        <command type="request" method="get" url="http://www.gmail.com">
            <referer value="http://profile.tut.by/newtut.html"/>
            <extract>
                <var type="regexp" name="uid" pattern="(.+)"/>
                <var type="xpath" name="captchaurl" xpath="//user" field="value"/>
                <var type="attvalue" name="password" attribute="input" value="value" field="value"/>
            </extract>
        </command>
        <command type="saveimage" url="firstid" name="firstimage"/>
        <command type="anticaptcha">
            <retrieve var="captcha_response" image="captchaurl" ext="jpg" phrase="false"/>
        </command>
        <command type="recaptcha" name="recaptcha_challenge1" url="recaptcha_url1" imagevar="recaptcha_response1"/>

        <command type="request" method="post" url="http://www.gmail.com/register">
            <referer var="refvar"/>
            <post-parameters>
                <parameter type="var" name="uid" var="uid"/>
                <parameter type="var" name="user" var="uid"/>
                <parameter type="var" name="password" var="uid"/>
                <parameter type="constant" name="secret" value="123"/>
                <parameter type="time" name="time"/>
                <parameter type="text" name="text" min="5" max="10"/>
            </post-parameters>
            <extract>
                <var type="regexp" name="login" pattern="(.+)"/>
            </extract>
            <test>
                <var type="string" value="Widget[Location]_country" expected="false"/>
                <var type="ftp" login="login" password="password" host="host" message="test failed"/>
                <var type="email" login="login" password="password" host="host" message="test failed"/>
            </test>
        </command>
        <command type="email" sleep="15000" attempts="5">
            <credential login="emaillogin" password="emailpassword" host="emailhost"/>
            <extract>
                <var type="regexp" name="uid" pattern="(.+)"/>
            </extract>
        </command>
        <command type="request" method="get" varurl="activate_url">
            <extract>
                <var type="regexp" name="recaptcha_url2" pattern="&quot;(http://api.recaptcha.net/challenge.+)&quot;"/>
                <var type="attvalue" name="diskurl" attribute="class" value="button b-button-create" field="href">
                    <prefix value="http://narod.yandex.ru"/>
                </var>
                <var type="attvalue" name="diskurl" attribute="class" value="button b-button-create" field="href">
                    <append value="http://narod.yandex.ru"/>
                </var>
            </extract>
        </command>
        <command type="export">
            <var name="name1" ref="ref1"/>
            <var name="name2" ref="ref2"/>
        </command>

        <command type="saveftp">
            <ftpaccount url="login" urlpattern="http://###.narod.ru" login="ftplogin" password="ftppassword" host="ftphost" prefix="" type="narod"/>
        </command>

        <command type="saveblog">
            <blogaccount url="url" xmlrpcpath="xmlrpcpath" login="login" password="password" type="type" urlpattern="http://$1.livejournal.com"/>
        </command>

        <command type="saveemail">
            <emailaccount email="email" emailpattern="##@yandex.ru" host="host" user="login" password="password"/>
        </command>

        <command type="deleteemail" ref="email"/>
    </commands>

</project>